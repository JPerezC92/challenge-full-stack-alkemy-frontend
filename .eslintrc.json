{
  "extends": ["next/core-web-vitals", "prettier"],
  "overrides": [
    {
      "files": ["__tests__/**"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "rules": { "jest/prefer-expect-assertions": "off" }
    }
  ],
  "rules": {
    "react-hooks/exhaustive-deps": [
      "warn",
      {
        "additionalHooks": "(useRequest|useCallableRequest)"
      }
    ]
  }
}
